@model Torta

<h3 class="my-5">
    @Model.Nome
</h3>

<div class="row gx-5">
    <img alt="@Model.Nome" src="@Model.ImagemUrl" class="img-fluid col-5" />
    <div class="col-7">
        <h4>@Model.DescricaoCurta</h4>
        <p>@Model.DescricaoDetalhada</p>
        <h3 class="pull-right">@Model.Preco.ToString("c")</h3>
        <div class="addToCart">
            <p class="button">

            </p>
        </div>
    </div>
</div>