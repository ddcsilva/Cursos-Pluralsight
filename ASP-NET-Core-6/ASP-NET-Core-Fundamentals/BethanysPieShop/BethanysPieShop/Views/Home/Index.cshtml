@model HomeViewModel

<partial name="_Carousel" />

<div class="text-center">
    <img src="Images/bethanys-pie-shop-logomark.png" class="logo-mark mx-auto" />
    <h1>Tortas da semana</h1>
    <h5>Desfrute de uma seleção semanal de nossas tortas favoritas</h5>

    <div class="row pies-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var torta in Model.TortasDaSemana)
            {
                <partial name="_TortaCard" model="torta" />
            }
        </div>

    </div>
</div>
